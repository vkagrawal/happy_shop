<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tabsLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/tab_bg_selector"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/dummyView"
        android:layout_width="@dimen/tab_icon_size"
        android:layout_height="@dimen/tab_icon_size"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tabIcon"
            android:layout_width="@dimen/tab_icon_size"
            android:layout_height="@dimen/tab_icon_size"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tabName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="Itme Name"
            android:textSize="12sp"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/cartItemBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/dummyView"
        android:background="@drawable/txt_rounded_corner"
        android:layout_marginTop="-1dp"
        android:layout_marginLeft="-5dp"
        android:visibility="gone"
        android:text="0"
        android:textSize="12sp"
        android:textColor="@android:color/white" />

</RelativeLayout>